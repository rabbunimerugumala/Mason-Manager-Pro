
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // A user must be signed in to perform any action.
    function isSignedIn() {
      return request.auth != null;
    }

    // A user can only access documents under their own user ID.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rule for the user's own profile document.
    // Any signed-in user can READ user documents (needed for signup/login flow)
    // but only the owner can write/update
    match /users/{userId} {
      // Allow any signed-in user to list and READ user documents
      // (needed for sign-up to check if name exists, login to get user data, and header to display profile)
      allow list: if isSignedIn();
      allow read: if isSignedIn();
      
      // Only the owner can write/update their own document
      allow write: if isSignedIn() && isOwner(userId);
    }

    // Rules for all subcollections under a user's document.
    // Only the owner can access their own nested data (places, records, etc.)
    match /users/{userId}/{document=**} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
  }
}
