
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // A user must be signed in to perform any action.
    function isSignedIn() {
      return request.auth != null;
    }

    // A user can only access documents under their own user ID.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rule for the user's own profile document.
    // They can create, read, update, and delete their own profile.
    match /users/{userId} {
      // Allow any signed-in user to query the users collection,
      // which is needed to check if a user name exists during sign-up.
      // The `get` rule below will prevent them from reading actual document data
      // for users they do not own.
      allow list: if isSignedIn();
      
      // Allow full access to a user's own document.
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Rules for all subcollections under a user's document.
    // This single rule applies to places, dailyRecords, paymentRates, etc.
    // It ensures that only the owner can access their own nested data.
    match /users/{userId}/{document=**} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
  }
}
